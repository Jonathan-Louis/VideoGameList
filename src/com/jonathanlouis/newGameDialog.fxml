<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jonathanlouis.NewGameDialogController"
            prefHeight="400.0" prefWidth="600.0">

    <headerText>
        Enter new game info:
    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Publisher: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="publisherTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Title: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="titleTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Genre: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="genreTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Description: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionTextArea" GridPane.rowIndex="3" GridPane.columnIndex="1" wrapText="true"/>
        </GridPane>
    </content>
</DialogPane>
